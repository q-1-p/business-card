{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/components/ui/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		},
		"ignore": ["node_modules", "dist", "*.config.ts"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
